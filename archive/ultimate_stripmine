-- V 1.0 (8/18/2015 14:00)--
-- Ultimate Stripmining --

local dir = "r" --direction of turn
local l = 10 --width of mine
local w = 32 --depth of mine
local x = 0
local y = 0
local u = 0


local function digVert()
	while turtle.detectUp() == true do
		turtle.digUp()
		sleep(.5)
	end
	turtle.digDown()
	x = x + 1
end


local function detectDigFwd()
	while turtle.detect() == true do
		turtle.dig()
		sleep(.5)  
	end
	turtle.forward()
end


local function startUp()
	repeat
		digVert()
		detectDigFwd()
		u = u + 1
	until u == l
end
	
	
local function turnLeft()
	if x == l then
		turtle.turnLeft()
		digVert()
		detectDigFwd()
		digVert()
		turtle.turnLeft()
		x = 0
		y = y + 1
	end
end

local function turnRight()
	if x == l then
		turtle.turnRight()
		digVert()
		detectDigFwd()
		digVert()
		turtle.turnRight()
		x = 0
		y = y + 1
	end
end

local function repeatDig()
	while x < l do
		digVert()
		detectDigFwd()
		print(x)
	end
end

local function dropAll()
	local itemSlot = 1
	while itemSlot <= 16 do
		turtle.select(itemSlot)
		turtle.drop()
		itemSlot = itemSlot + 1
	end
end

local function fullDigRight()
	while y < w do	
		repeatDig()
		turnRight()
		repeatDig()
		turnLeft()
		dropAll()
	end
end

local function fullDigLeft()
	while y < w do	
		repeatDig()
		turnLeft()
		repeatDig()
		turnRight()
		dropAll()
	end
end

local function startMining()
	startUp()
	if dir == "r" then
		fullDigRight()
	elseif dir == "l" then
		fullDigLeft()
	end
	dropAll()
end

local dirInput = "null"
local exe = false
local validDir = true

term.clear()
term.setCursorPos(1, 1)
while validDir do
	print(os.getComputerLabel().." - "..os.getComputerID())
	print("Ultimate Stripmining V1.0\n")
	print("Enter the desired input below.")
	print("Direction of turn (R/L/D) (D = defaults): ")
	dirInput = string.lower(read())

	if dirInput == "d" then
		term.clear()
		term.setCursorPos(1, 1)
		print("Ultimate Stripmining V1.0\n")
		print("Using defaults.\nTurn: "..dir.."\nDepth: "..w.."\nRows: "..l.."\n")
		print("Continue? (y/n)")
		exe = string.lower(read())
		if exe == "y" then
			validDir = false
			startMining()
		else
			print("Exiting...")
			sleep(2)
		end
	elseif (dirInput == "r") or (dirInput == "l") then
		print("Depth: ")
		w =tonumber(read())
		print("Number of Rows: ")
		l = tonumber(read())
		print("\nUsing the following inputs:\nTurn: "..dir.."\nDepth: "..w.."\nRows: "..l.."\n")
		print("Continue? (y/n)")
		exe = string.lower(read())
		if exe == "y" then
			validDir = false
			startMining()
		else
			print("Exiting...")
			sleep(2)
		end
	else
		print("Invalid direction! Press Enter to continue.")
		read("*")
	end
end